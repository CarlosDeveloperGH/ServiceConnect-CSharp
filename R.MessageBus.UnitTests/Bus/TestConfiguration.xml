<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="BusSettings" type="BusSettings.BusSettings, R.MessageBus.Settings" />
  </configSections>

  <BusSettings xmlns="BusSettings">
    <TransportSettings>
      <RabbitMq EndPoint="TestEndPoint" Host="localhost">
        <Exchange Name="TestExchange" Type="topic" />
        <Retries MaxRetries="2" RetryDelay="2000" />
      </RabbitMq>
    </TransportSettings>
    
    <PersistanceSettings>
       <MongoDb Database="TestDatabase" ConnectionString="mongodb://localhost/" />
    </PersistanceSettings>
  </BusSettings>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  
</configuration>
